%div
  - unless @user.errors.on(:password).nil? && @user.errors.on(:password_confirmation).nil?
    .formError= "There were problems updating your password:"
  - form_for @user do |f|
    .row.form-input
      = f.label :password
      = f.password_field :password
      = error_message_on @user, :password, :prepend_text => "Password "
    .row.form-input
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    = error_message_on @user, :password_confirmation, :prepend_text => "Password Confirmation "
    .row.form-input
      = f.submit "Update Password", :class => "wide-label-submit"

%div
  - unless @user.errors.empty?
    .formError= "There were problems with your user information:"
  - form_for @user do |f|
    .row.form-input
      = f.label :name
      = f.text_field :name
    = error_message_on @user, :name, :prepend_text => "Name "
    .row.form-input
      = f.label :login
      = f.text_field :login
    = error_message_on @user, :login, :prepend_text => "Login "
    .row.form-input
      = f.label :email
      = f.text_field :email
    = error_message_on @user, :email, :prepend_text => "Email "
    .row.form-input
      = f.label :state
      = f.text_field :state
    = error_message_on @user, :state, :prepend_text => "State "
    .row.form-input
      = f.label :birth_date
      = f.date_select :birth_date, :class => "integer"
    = error_message_on @user, :birth_date, :prepend_text => "Birth Date "
    .row.form-input
      = f.label :gender
      = f.radio_button :gender, "M"
      = "Male"
      = f.radio_button :gender, "F"
      = "Female"
    = error_message_on @user, :gender, :prepend_text => "Gender "
    .row.form-input
      = f.submit "Update Profile", :class => "wide-label-submit"
