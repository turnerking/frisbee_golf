- if current_user == @user
  = link_to "Edit", edit_user_path(@user)
#user_info
  .row.model-content
    .label= "Name:"
    .info= @user.name
  .row.model-content
    .label= "Location:"
    .info= @user.state
  .row.model-content
    .label= "Age:"
    .info= @user.age
  - unless @user.gender.nil? 
    .row.model-content
      .label= "Gender:"
      .info= display_gender(@user.gender)
  .row.model-content
    .label= "Email:"
    .info= @user.email