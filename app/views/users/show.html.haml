- if current_user == @user
  = link_to "Edit", edit_user_path(@user)
#user_info
  .row
    .label= "Name:"
    .info= @user.name
  .row
    .label= "Location:"
    .info= @user.state
  .row
    .label= "Age:"
    .info= @user.age
  .row
    .label= "Gender:"
    .info= display_gender(@user.gender)
  .row
    .label= "Email:"
    .info= @user.email