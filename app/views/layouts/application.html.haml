%html
  %head
    %title="Frisbee Golf"
    = javascript_include_tag "jquery-1.3.2.js"
    = javascript_include_tag "jquery-ui-1.7.2.custom.min.js"
    = javascript_include_tag "application.js"
    = stylesheet_link_tag "reset", "application", "jquery-theme/jquery-ui-1.7.2.custom"
  %body
    #content
      = render :partial => "/users/user_bar"
      %h1#home-title= link_to "Frisbee Golf Tracker", "/"
      - if flash[:notice]
        .notice
          = flash[:notice]
      - if flash[:error]
        .error
          = flash[:error]
      = yield
      #footer
        %hr
        %p
          = "This site was created and is maintained by "
          = link_to "Turner King", "mailto:turneraking@gmail.com"