- form_for @scorecard do |f|
  = hidden_field_tag "scorecard[course_id]", course.id
  = hidden_field_tag "scorecard[user_id]", current_user.id
  #scores
    .score_labels
      %p= "Distance"
      %p= "Hole"
      %p= "Par"
      %p= "Score"
    - course.holes.each do |hole|
      - f.fields_for :scores, Score.new do |score_fields|
        .score_fields
          = score_fields.text_field :distance_in_ft, :value => hole.distance_in_ft, :readonly => true, :class => "score"
          %br
          = score_fields.text_field :number, :value => hole.number, :readonly => true, :class => "score"
          %br
          = score_fields.text_field :par, :value => hole.par, :readonly => true, :class => "score"
          %br
          = score_fields.text_field :shots, :class => "score shots"
    .score_totals
      %p= course.holes.sum('distance_in_ft')
      %p= "&nbsp;"
      %p= course.holes.sum('par')
      %p.shot_total= 0
  = f.submit "Submit Round"